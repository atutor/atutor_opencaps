SMILtext<smil xmlns:qt="http://www.apple.com/quicktime/resources/smilextensions" qt:autoplay="false" qt:time-slider="true" qt:chapter-mode="all" >	<head>		<layout type="text/css">			[region="captionregion"] {background-color:black; }      	</layout>		<layout>			<root-layout id="Main" width="%rootwidth%" height="%rootheight%" background-color="#000000" />			<region id="movieregion" width="%width%" height="%height%" left="0" top="2" fit="Fill" z-index="1" background-color="#000000" />			<region id="captionregion" width="%capwidth%" height="%capheight%" left="5" top="%captop%" fit="Meet" z-index="0" background-color="#000000" />		</layout>	</head>	<body>		<par begin="00:00:00.00" dur="%duration%">			<video src="%video%" id="video1" region="movieregion" dur="%duration%" />			<textstream src="captions.txt" id="text1" region="captionregion" dur="%duration%" />		</par>	</body></smil>